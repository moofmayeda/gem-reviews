<% if review.id != nil %>
  <div class="panel panel-default" id="review_<%= review.id %>">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= review.title %>
        <% if current_user == review.user %>
          <span class='pull-right'><%= link_to "Edit", edit_jewel_review_path(review.jewel,review), id: "edit_link_#{review.id}", remote: true %></span>
        <% end %>
        <%= link_to review.user.name, user_path(review.user), class: "pull-right" %>
      </h3>
    </div>
    <div class="panel-body">
      <p><em>created on <%= review.created_at %></em></p>
      <p><span id="review_text_<%= review.id %>"><%= review.text %></span></p>
    </div>
  </div>
<% end %>
